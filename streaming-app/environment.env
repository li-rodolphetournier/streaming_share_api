# Configuration de l'environnement de production
NODE_ENV=production

# Base de données PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=streaming_db
POSTGRES_USER=streaming_user
POSTGRES_PASSWORD=streaming_password_2024

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_2024

# JWT Secrets (à changer en production)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_2024
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_in_production_2024

# API Configuration
API_PORT=3001
API_HOST=0.0.0.0

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api
VITE_MOCK_API=false

# Chemins des médias
MEDIA_PATH=/media
UPLOADS_PATH=/uploads
THUMBNAILS_PATH=/thumbnails
HLS_PATH=/tmp/hls

# Configuration du streaming
MAX_UPLOAD_SIZE=10GB
SUPPORTED_VIDEO_FORMATS=mp4,mkv,avi,mov,wmv,flv,webm
SUPPORTED_AUDIO_FORMATS=mp3,flac,wav,aac,ogg
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp,bmp

# Configuration FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe

# Logs
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Sécurité
CORS_ORIGIN=http://localhost:3000,http://localhost:80
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Performance
CACHE_TTL=3600
SESSION_TIMEOUT=86400 