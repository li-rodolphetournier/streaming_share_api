{
  "name": "streaming-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'application de streaming",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:simple": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:apollo": "nodemon --exec ts-node -r tsconfig-paths/register src/apollo.ts",
    "apollo": "ts-node -r tsconfig-paths/register src/apollo.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:apollo": "node dist/apollo.js",
    "sync-db": "ts-node src/scripts/sync-schema.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate",
    "migration:run": "typeorm-ts-node-commonjs migration:run",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert",
    "schema:sync": "typeorm-ts-node-commonjs schema:sync",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop",
    "seed": "ts-node src/seeds/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "streaming",
    "api",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "Streaming App Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/datasource-rest": "^6.4.1",
    "@apollo/server": "^4.12.1",
    "@apollo/subgraph": "^2.10.2",
    "@types/graphql": "^14.2.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "fluent-ffmpeg": "^2.1.3",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.24.2",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.33.5",
    "type-graphql": "^2.0.0-rc.2",
    "typeorm": "^0.3.20",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/fluent-ffmpeg": "^2.1.26",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.29",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "^9.25.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
